<html lang="en">

<head>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script>
    function addMoney(){
      alert('Added Money Successfully!')
    }
  </script>
  <title>Add Money</title>
</head>

<div class="container">
    <h2><%- title %></h2>
    <h4><%- subtitle%></h4>
    <form action="/savebal?uid=<%- account[0].USER_ID %>" method="post">
        <div class="form-group">
          <label for="accNo">Account Number: </label>
            <% for( let i = 0; i < account.length; i++ ) { %>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="accNo" id="accNo"
                  value="<%- account[i].ACC_NO %>"/>
                <label class="form-check-label" for="accNo"><%- account[i].ACC_NO %></label>
              </div>
            <% } %>
        </div>
        <div class="row">
          <div class="form-group col-md-4">
          <label for="date">Date</label>
          <input type="text" class="form-control" id="pay_date" placeholder="yyyy-mm-dd" name="addDate">
          </div>
          <div class="form-group col-md-4">
          <label for="amount">Amount</label>
          <input type="number" class="form-control" id="add_amt" name="addAmt" min="1">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-4">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="pay_desc" name="add_desc">
        </div>
        <div class="form-group col-md-4">
            <label for="sender">Sender Name</label>
            <input type="text" class="form-control" id="rec_name" name="snd_name">
        </div>
        </div>
        <button type="submit" class="btn btn-primary" onclick="addMoney()">Submit</button>
    </form>

</div>

</body>

</html>